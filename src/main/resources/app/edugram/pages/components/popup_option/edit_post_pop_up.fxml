<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="500.0" styleClass="popup-background" stylesheets="@../../../assets/css/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.edugram.controllers.Components.EditPostPopUpController">
    <children>
        <Label styleClass="popup-title" text="Edit Post">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Title Post:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="titlePostField" promptText="Enter post title" styleClass="text-field-custom" />
                <Label text="Description Post:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="descPostArea" prefHeight="100.0" promptText="Enter post description" styleClass="text-area-custom" wrapText="true" />
                <Label text="Image URL:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="imagePostField" promptText="Enter image URL" styleClass="text-field-custom" />
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </VBox>
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" text="Save" styleClass="primary-button" />
                <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" styleClass="secondary-button" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>