<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="profilePictureChooserPopup" alignment="TOP_CENTER" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-padding: 25px; -fx-background-radius: 8px; -fx-border-radius: 8px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.edugram.controllers.PilihGambarProfile">
    <children>
        <Label text="Pilih Gambar Profil">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Pilih Gambar (JPG/PNG):">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="imagePathInput" editable="false" promptText="Pilih file gambar..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="browseImageButton" text="Pilih Gambar" />
                    </children>
                </HBox>
                <ImageView fx:id="imagePreview" fitHeight="150.0" fitWidth="178.0" preserveRatio="true" style="-fx-border-color: #ddd; -fx-border-width: 1px; -fx-background-color: #f0f0f0;">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </ImageView>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" style="-fx-background-color: #f0f0f0; -fx-text-fill: #333; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-padding: 8px 20px;" text="Batal" />
                <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 8px 20px;" text="Simpan Gambar" />
            </children>
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
</VBox>