<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="tagFilterModalRoot" alignment="TOP_CENTER" prefWidth="450.0" spacing="15.0" styleClass="tag-filter-modal-root" stylesheets="@../../assets/css/search_modal.css" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-padding: 25px; -fx-background-radius: 8px; -fx-border-radius: 8px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.edugram.controllers.TagFilterController">
    <children>
        <Label text="Pilih Tag untuk Filter">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <FlowPane fx:id="tagContainer" hgap="10.0" vgap="10.0" alignment="CENTER_LEFT">
            <padding>
                <Insets left="5.0" right="5.0" />
            </padding>
        </FlowPane>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="clearSelectionButton" mnemonicParsing="false" styleClass="tag-button-clear" text="Hapus Pilihan" />
                <Button fx:id="applyFilterButton" mnemonicParsing="false" styleClass="tag-button-apply" text="Terapkan Filter" />
            </children>
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
</VBox>